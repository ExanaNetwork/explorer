extends layout

block content
	h3 Internal error

	if (message && config.renderPugError)
		hr
		pre
			code.json.bg-light !{message}
	else
		p Unknown error
		p Please report the problem on 
			a(href="https://github.com/ExanaNetwork/explorer/issues") Exana Explorer issues page.

	if (error && config.renderPugError)
		hr
		h3 #{error.status}
		pre
			code.json.bg-light #{error.stack}
